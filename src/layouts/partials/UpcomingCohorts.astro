---
import { markdownify } from "@/lib/utils/textConverter";
const { upcoming_cohorts } = Astro.props;
---

{
  upcoming_cohorts.data.enable && (
    <section id="upcoming-cohorts" class="section">
      <div class="container">
        <div class="row">
          <div class="mx-auto mb-12 text-center md:col-10 lg:col-8 xl:col-6">
            <h2 set:html={markdownify(upcoming_cohorts.data.title)} class="mb-4" />
          </div>
          <div class="col-12">
            <div class="flex flex-col gap-4 items-center md:items-start md:flex-row md:justify-center">
              {upcoming_cohorts.data.cohorts.map(
                (cohort: { name: string; dates: string }) => (
                  <div class="text-center md:text-left">
                    <div class="text-lg font-semibold mb-1">{cohort.name}</div>
                    <div class="text-text-dark dark:text-white">{cohort.dates}</div>
                  </div>
                )
              )}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

