---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { markdownify } from "@/lib/utils/textConverter";
import menWantedImage from "@/assets/images/men-wanted.png";

const { call_to_action } = Astro.props;

// Map content paths to imported images
const imageMap: Record<string, ImageMetadata> = {
  "/images/men-wanted.png": menWantedImage,
};

const resolvedImage = imageMap[call_to_action.data.image] || null;
---

{
  call_to_action.data.enable && (
    <section id="apply" class="w-full bg-primary text-white py-16 xl:py-20">
      <div class="container">
        <div class="row items-center justify-between">
          <div class="mb-10 md:col-5 lg:col-4 md:order-2 md:mb-0">
            <a
              href="https://en.wikipedia.org/wiki/Endurance_(1912_ship)"
              target="_blank"
              rel="noopener noreferrer"
              class="block"
            >
              {resolvedImage && (
                <Image
                  class="w-full mix-blend-darken"
                  src={resolvedImage}
                  width={392 * 2}
                  height={390 * 2}
                  alt="Vintage recruitment poster encouraging applications"
                  format="webp"
                />
              )}
            </a>
          </div>
          <div class="md:col-7 md:order-1">
            <h2
              set:html={markdownify(call_to_action.data.title)}
              class="mb-2 text-white"
            />
            <p
              set:html={markdownify(call_to_action.data.description)}
              class="mb-6 text-white cta-description"
            />
            <div class="flex items-center gap-6">
              {call_to_action.data.button.enable && (
                <a
                  class="btn-retro inline-block px-8 py-4 text-lg min-w-[225px] text-center"
                  href={call_to_action.data.button.link}
                  target={call_to_action.data.button.link.startsWith("http") ? "_blank" : "_self"}
                  rel={call_to_action.data.button.link.startsWith("http") ? "noopener noreferrer" : ""}
                >
                  {call_to_action.data.button.label}
                </a>
              )}
              {call_to_action.data.dates && (
                <div class="text-white text-lg font-medium">
                  {call_to_action.data.dates}
                </div>
              )}
            </div>
            <p class="mt-4 text-white text-lg">
              Can't make March? Check the dates of our <a href="/#upcoming-cohorts" class="underline hover:no-underline">upcoming cohorts</a>.
            </p>
          </div>
        </div>
      </div>
    </section>
  )
}
